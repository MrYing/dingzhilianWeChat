/*时间筛选*/
.screen-time{
    width:750rpx;
    height: 166rpx;
    background-color:#fff;
    margin-bottom:20rpx;
    position: relative;
}

.time-style{
    width:750rpx;
    height: 62rpx;
    line-height: 62rpx;
}

.time-style:first-child{
    margin-top:22rpx;
}

.time1{
    color:#999;
    margin:0 20rpx;
    float: left;
}

.time2{
    margin-left: 20rpx;
    float: left;
    height: 60rpx;
    line-height: 60rpx;
}

.time2 text{
    float: left;
    height: 60rpx;
    line-height: 60rpx;
}

.screen-btn{
    position: absolute;
    width:160rpx;
    height: 54rpx;
    line-height: 54rpx;
    border:none!important;
    border-radius: 0!important;
    padding-left:0;
    padding-right: 0;
    margin:0;
    top:56rpx;
    right: 20rpx;
    background-color:#27b2eb;
    color:#fff;
    font-size:26rpx;
}

.statistics-title{
    display:block;
    width:710rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding:0 20rpx;
    background-color:#fff;
    position: fixed;
    top:0;
    left:0;
}

.statistics-detail{
    margin-top:100rpx;
}
