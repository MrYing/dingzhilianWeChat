.order-statistics{
    width:100%;
}

/*时间筛选*/
.screen-time{
    width:750rpx;
    height: 166rpx;
    background-color:#fff;
    margin-bottom:20rpx;
    position: relative;
}

.time-style{
    width:750rpx;
    height: 62rpx;
    line-height: 62rpx;
}

.time-style:first-child{
    margin-top:22rpx;
}

.time1{
    color:#999;
    margin:0 20rpx;
    float: left;
}

.time2{
    margin-left: 20rpx;
    float: left;
    height: 60rpx;
    line-height: 60rpx;
}

.time2 text{
    float: left;
    height: 60rpx;
    line-height: 60rpx;
}

.screen-btn{
    position: absolute;
    width:160rpx;
    height: 54rpx;
    line-height: 54rpx;
    border:none!important;
    border-radius: 0!important;
    padding-left:0;
    padding-right: 0;
    margin:0;
    top:56rpx;
    right: 20rpx;
    background-color:#27b2eb;
    color:#fff;
    font-size:26rpx;
}
/*时间筛选*/

.state{
    width:100%;
    height: 100rpx;
    background-color: #fff;
    border-bottom:2rpx solid #e5e5e5;
    white-space: nowrap;
    display: flex;
    position: fixed;
    top:0;
    left:0;
    z-index:100;
}

.state-text{
    height: 50rpx; 
    border-bottom:4rpx solid #fff;
}

.state-text:nth-child(1){
    position: absolute;
    left:20rpx;
    top:23rpx;
}

.state-text:nth-child(2){
    position: absolute;
    width:120rpx;
    left:0;
    right:0;
    top:23rpx;
    margin:auto;
}

.state-text:nth-child(3){
    position: absolute;
    right:20rpx;
    top:23rpx;
}

.state-active{
    border-bottom:4rpx solid #27b2eb;
}



