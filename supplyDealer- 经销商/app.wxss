.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family:"微软雅黑";
  font-size:30rpx;
  color:#333;
} 

page{
  background-color:#f2f2f2;
  font-family:"微软雅黑";
  font-size:30rpx;
  color:#333;
}

