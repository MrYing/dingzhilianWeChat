.order-detail{
    width:710rpx;
    padding:0 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.order-con{
    width:100%;
    display: inline-block;
    border-bottom: 2rpx solid #e5e5e5;
}

.order-con:last-child{
    border-bottom: none;
}

.text1{
    color:#999;
    height: 80rpx;
    line-height: 80rpx;
    float: left;
}

.text2{
    width:540rpx;
    height: 80rpx;
    line-height: 80rpx;
    float: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
}

.see-detail{
    color:#27b2eb;
    margin-left: 10rpx;
}

.see-icon{
    width:12rpx;
    height: 22rpx;
    margin-left: 10rpx;
}

.logistics-num{
    width:540rpx;
    height: 54rpx;
    float: right;
    background-color:#f2f2f2;
    padding-left: 20rpx;
    margin-top:12rpx;
    font-size:28rpx;
    font-family:"微软雅黑";
}

.logistics-pla{
    color:#999;
    font-family:"微软雅黑";
    font-size:28rpx;
}

.save-btn{
    position: fixed;
    bottom:0;
    left: 0;
    width:100%;
    height: 98rpx;
    line-height: 98rpx;
    background-color:#27b2eb;
    color:#fff;
    text-align: center;
    font-size:32rpx;
}
